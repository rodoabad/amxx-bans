/* body settings */

body {
	font-family: verdana, tahoma, arial;
	font-size: 11px;
	font-style: normal;
	font-weight: normal;
	
	margin-top: 0px;
	margin-right: 0px; 
	margin-bottom: 0px;
	margin-left: 0px;
	
	padding-top: 0px;
	padding-right: 0px; 
	padding-bottom: 0px;
	padding-left: 0px;
	
	background-color: #9CB3B3;
	background-repeat: repeat-y;
}

a:visited	{ color: #000000; font-size: 10px; text-decoration: none }
a:link		{ color: #000000; font-size: 10px; font-family: Verdana, Arial, Helvetica, Geneva, Swiss, SunSans-Regular; text-decoration: none }
a:hover		{ color: #AA0000; font-size: 10px; font-family: Verdana, Arial, Helvetica, Geneva, Swiss, SunSans-Regular }


